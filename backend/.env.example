# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/vibeconnect

# ============================================
# AI & MACHINE LEARNING
# ============================================
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# BLOCKCHAIN & WEB3
# ============================================
# Base RPC (Alchemy or Infura)
BASE_RPC_URL=https://base-sepolia.g.alchemy.com/v2/your-api-key
BASE_MAINNET_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your-api-key

# Deployment Wallet (NEVER COMMIT THIS)
PRIVATE_KEY=your_deployment_wallet_private_key

# Deployed Contract Addresses
PROFILE_NFT_CONTRACT=0x...
CONNECTION_NFT_CONTRACT=0x...
PESOBYTES_CONTRACT=0x...
EVENT_ENTRY_NFT_CONTRACT=0x...
EVENT_TOKEN_FACTORY_CONTRACT=0x...
TWIN_BADGE_CONTRACT=0x...

# Gasless Relay (Gelato Relay or Defender)
GELATO_RELAY_API_KEY=your_gelato_relay_api_key
DEFENDER_API_KEY=your_openzeppelin_defender_api_key
DEFENDER_SECRET_KEY=your_openzeppelin_defender_secret

# ============================================
# IPFS & STORAGE
# ============================================
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt_token

# ============================================
# REDIS & CACHING
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# JWT & AUTH
# ============================================
# CRITICAL: Generate a secure random key
# Use: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_64_CHARACTER_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# NOTIFICATIONS
# ============================================
# Firebase (Push Notifications)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_PROJECT_ID=your_firebase_project_id

# Twilio (SMS for deploy notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
ALERT_PHONE_NUMBER=+1234567890

# ============================================
# MERCH & PRINTFUL
# ============================================
PRINTFUL_API_KEY=your_printful_api_key
PRINTFUL_STORE_ID=your_printful_store_id
PRINTFUL_WEBHOOK_SECRET=your_printful_webhook_secret
PRINTFUL_SANDBOX_MODE=true

# ============================================
# SOCIAL MEDIA SCRAPING
# ============================================
# Instagram Graph API
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# TikTok API (optional)
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# ============================================
# PRICE TRACKING
# ============================================
# CoinGecko or Dexscreener for token prices
COINGECKO_API_KEY=your_coingecko_api_key
DEXSCREENER_API_URL=https://api.dexscreener.com/latest

# ============================================
# APP CONFIG
# ============================================
ENVIRONMENT=development
DEBUG=True
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# DEMO MODE (for yarn demo:party)
# ============================================
DEMO_MODE=false
DEMO_EVENT_ID=demo-party-2026
