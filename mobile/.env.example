# ============================================
# API CONFIGURATION
# ============================================
EXPO_PUBLIC_API_URL=http://localhost:8000
EXPO_PUBLIC_API_VERSION=v1

# ============================================
# BLOCKCHAIN & WEB3
# ============================================
# Wallet Connect Project ID (get from https://cloud.walletconnect.com)
EXPO_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# Base Chain ID (8453 = mainnet, 84532 = sepolia testnet)
EXPO_PUBLIC_CHAIN_ID=84532
EXPO_PUBLIC_BASE_RPC_URL=https://base-sepolia.g.alchemy.com/v2/your_api_key

# Contract Addresses
EXPO_PUBLIC_PROFILE_NFT_ADDRESS=0x...
EXPO_PUBLIC_CONNECTION_NFT_ADDRESS=0x...
EXPO_PUBLIC_PESOBYTES_ADDRESS=0x...
EXPO_PUBLIC_EVENT_ENTRY_NFT_ADDRESS=0x...
EXPO_PUBLIC_EVENT_TOKEN_FACTORY_ADDRESS=0x...
EXPO_PUBLIC_TWIN_BADGE_ADDRESS=0x...

# ============================================
# PUSH NOTIFICATIONS
# ============================================
# Firebase (auto-configured via google-services.json)
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id

# ============================================
# FEATURE FLAGS
# ============================================
EXPO_PUBLIC_ENABLE_DOOR_MINT=true
EXPO_PUBLIC_ENABLE_HAPTICS=true
EXPO_PUBLIC_ENABLE_SOUNDS=true
EXPO_PUBLIC_ENABLE_MERCH=true
EXPO_PUBLIC_DEMO_MODE=false
